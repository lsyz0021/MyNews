<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/img_newcenter_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/small_5"
            android:background="@drawable/news_cate_arr"
            android:paddingRight="@dimen/small_5" />

        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/newscenter_tabIndictor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_newcenter_left"
            android:background="@color/color_tab_text_checked" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/newscentercontent_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>