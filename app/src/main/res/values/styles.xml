<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rb_tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:drawablePadding">@dimen/tab_rb_5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/tab_rb_5dp</item>
        <item name="android:paddingTop">@dimen/tab_rb_5dp</item>
        <item name="android:textColor">@color/bottom_tab_text_color_selector</item>
    </style>

</resources>
